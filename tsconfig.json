{
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
    "dist",
  ],
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "esnext",
    "target": "esnext",
    "moduleDetection": "force",
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  }
}
