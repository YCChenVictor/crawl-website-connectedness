{
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
  ],
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "esnext",
    "target": "esnext",
    "moduleDetection": "force",
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
  },
}
